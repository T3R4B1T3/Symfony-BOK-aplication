{% extends 'base.html.twig' %}

{% block title %}Welcome to the homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="log_messages">
    {% if app.user is not empty %}
        <p>You are logged as {{ app.user.username }}</p>
        <a href="{{ path('app_logout') }}">Logout</a>
    {% endif %}
</div>
<div class="example-wrapper">
    <h1 id="hm1">Welcome to the Homepage! âœ…</h1>
    <ul>
        <li><a href="{{ path('app_report_new') }}">Add new report! </a></li>
        <li><a href="{{ path('app_login') }}">Login in!</a></li>
        {% if is_granted("ROLE_ADMIN") %}
        <li><a href="{{ path('app_report')}}">Reports list!</a></li>
        <li><a href="{{ path('app_register') }}">Add new user account!</a></li>
        {% endif %}



    </ul>
</div>
{% endblock %}
