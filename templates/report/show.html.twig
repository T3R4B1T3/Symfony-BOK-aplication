{% extends 'base.html.twig' %}

{% block title %}Report{% endblock %}

{% block body %}
    <h1>Report</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ report.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ report.description }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ report.email }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ report.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Report_date</th>
                <td>{{ report.reportDate ? report.reportDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User_agent</th>
                <td>{{ report.userAgent }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_report_edit', {'id': report.id}) }}">edit</a>

    {{ include('report/_delete_form.html.twig') }}
{% endblock %}
