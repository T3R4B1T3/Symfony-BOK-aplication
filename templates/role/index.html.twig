{% extends 'base.html.twig' %}

{% block title %}ROLE LIST!{% endblock %}

{% block body %}
    <div class="container" id="roleindex">
    <h1>Role list</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Role</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.name }}</td>
                <td>{{ include('role/delete.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
        <a id="backtohomepage" href="{{ path('app_role_new') }}">ADD NEW ROLE</a>
        <a id="backtohomepage" href="{{ path('app_home_page') }}">HOMEPAGE</a>
{% endblock %}
