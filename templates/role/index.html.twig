{% extends 'base.html.twig' %}

{% block title %}ROLE LIST!{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Role</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.name }}</td>
                {% if app.request.get('_route') == 'app_role' %}
                {% endif %}
                <td>{{ include('role/delete.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    <p><a href="{{ path('app_role_new') }}">ADD NEW ROLE</a></p>
{% endblock %}
